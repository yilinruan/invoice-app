datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  name      String
  invoices  Invoice[]
}

model Invoice {
  id          Int      @id @default(autoincrement())
  vendor_name String
  amount      Float
  due_date    DateTime
  description String
  user_id     Int
  paid        Boolean  @default(false)
  user        User     @relation(fields: [user_id], references: [id])
}
